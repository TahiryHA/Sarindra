{% extends 'area/base.html.twig' %}
{% block title %}
			{{ App.name }} -
Paramètre
		{% endblock %}

{% block left_sidebar %}
    {% include 'area/common/left-sidebar.twig' with { active: 'parameter', active_: null } %}
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <div class="d-flex align-items-center">
            <h4 class="card-title">Paramètre</h4>
            <div class="ml-auto">
                <a href="{{path('parameter_new')}}"><button type="button" class="btn btn-success btn-round">
                    <i class="fa fa-plus"></i>&nbsp;Ajouter
                </button>
                </a>
            </div>
        </div>
    </div>

    <div class="card-body">

        <table id="parameterDatatable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Code</th>
                    <th>Valeur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for parameter in parameters %}
                <tr>
                    <td>{{ parameter.name }}</td>
                    <td>{{ parameter.code }}</td>
                    <td>{{ parameter.value }}</td>
                    <td>
                        <a href="{{ path('parameter_edit', {'id': parameter.id}) }}"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th>Nom</th>
                    <th>Code</th>
                    <th>Valeur</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
{% endblock %}

