<form id="formChangePasswordUser" method="post">
    <div class="container-fluid">
        <div class="form-group row d-none" id="error_message">
            <div class="col-sm-12">
                <div class="alert alert-danger alert-dismissible">
                    <strong>Erreur!</strong> <span class="message"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6 col-form-label">Mot de passe actuel *</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" name="password" required="required" placeholder="Mot de passe actuel">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6 col-form-label">Nouveau mot de passe *</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" name="password1" required="required" placeholder="Nouveau mot de passe">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6 col-form-label">Confimer *</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" name="password2" required="required" placeholder="Confirmer le mot de passe">
            </div>
        </div>
    </div>

    <div class="modal-footer no-bd">
        <button type="submit" id="" class="btn btn-primary float-right">Soumettre</button>
    </div>
</form>
