<div class="text-center">
		<h3>Présence quotidienne</h3>
		<p>Date :
			{{ 'now'|localizeddate('none', 'none', locale(), null, 'EEEE d MMMM Y') }}</p>
	</div>
	{# {{form_start(form)}} #}
	<form action="" method="post">
	<div class="card">

		<div class="card-header">
			<div class="d-flex align-items-center">
				<h4
					class="card-title">
					Classe :
					<span class="badge badge-pill badge-primary">{{departement.name}}</span>
				</h4>
			</div>
		</div>
		<div class="card-body">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
					
						<th>Nom</th>
						<th>Presence</th>


					</tr>
				</thead>
				<tbody>
					{% for personnel in departement.personnels %}
						<tr>
			
							<td>{{personnel.name}}</td>
							<td>
								<input type="radio" name="status[{{personnel.id}}]" id="present_{{personnel.id}}" value="1" checked="checked">
							<label for="present_{{personnel.id}}">Present</label>

								<input type="radio" name="status[{{personnel.id}}]" id="absent_{{personnel.id}}" value="0">
							<label for="absent_{{personnel.id}}">Absent</label>

							</td>


						</tr>
					{% else %}
						<tr>
							<td colspan="66">Aucun personnel</td>
						</tr>

					{% endfor %}
				</tbody>
				
			</table>

		</div>
		<div class="card-footer">
			<a class="float-left" href="{{ path('absence_index') }}">Retour à la liste</a>
			<button type="submit" class="btn btn-primary float-right">Valider</button>
		</div>
	</div>
	</form>
	{# {{form_end(form)}} #}