{% extends 'area/base.html.twig' %}

{% block title %}Conge{% endblock %}


{% block left_sidebar %}
	{% include 'area/common/left-sidebar.twig' with { active: 'rapport', active_: 'rapport_conge' } %}
{% endblock %}

{% block body %}
    <h1>Demande de congé</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Demande de congé de</th>
                <td>{{ conge.personnel.name }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ conge.motif }}</td>
            </tr>
            <tr>
                <th>Date de départ</th>
                <td>{{ conge.dateDep|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ conge.dateFin|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ conge.status ? "Approuvé" : "Non approuvé" }}</td>
            </tr>
             <tr>
                <th>Observation</th>
                <td>{{ conge.observation ? conge.observation : "Aucun observation" }}</td>
            </tr>
            <tr>
                <th>Date de la demande</th>
                <td>{{ conge.createdAt ? conge.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('conge_index') }}" class="btn btn-secondary m-1">Retour à la liste</a>

    <a href="{{ path('conge_edit', {'id': conge.id}) }}" class="btn btn-success float-right m-1">Modifier</a>

    {{ include('conge/_delete_form.html.twig') }}
{% endblock %}
